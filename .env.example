# ===================================================================
# Chirpy RSS Reader Configuration
# Copy this file to .env and adjust values as needed
# ===================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3

# Database Settings
CHIRPY_DATABASE_PATH=data/articles.db

# Article Processing Settings
CHIRPY_MAX_ARTICLES=3
CHIRPY_MAX_SUMMARY_LENGTH=500

# Text-to-Speech Settings
TTS_ENGINE=pyttsx3          # 'pyttsx3' or 'say' for macOS
TTS_RATE=180               # words per minute (50-500)
TTS_VOLUME=0.9             # volume level (0.0-1.0)

# Content Fetching Settings
FETCH_TIMEOUT=30           # HTTP request timeout in seconds
RATE_LIMIT_DELAY=2         # delay between API calls in seconds

# Logging Configuration
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# LOG_FILE=logs/chirpy.log  # uncomment to enable file logging
LOG_MAX_BYTES=10485760     # 10MB log file size limit
LOG_BACKUP_COUNT=3         # number of backup log files

# Application Behavior
AUTO_MARK_READ=true        # automatically mark articles as read after TTS
PAUSE_BETWEEN_ARTICLES=true  # pause between article readings
SPEECH_ENABLED=true        # enable text-to-speech functionality

# Translation Settings
AUTO_TRANSLATE=true        # automatically translate non-Japanese articles
TARGET_LANGUAGE=ja         # target language for translation (ja=Japanese)
PRESERVE_ORIGINAL=true     # preserve original text before translation
TRANSLATION_PROVIDER=openai  # translation provider (currently only 'openai')

# Development/Debug Settings
# LOG_LEVEL=DEBUG
# LOG_FILE=logs/chirpy-debug.log